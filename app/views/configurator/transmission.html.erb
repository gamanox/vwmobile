<div>
	<div class="page_title">
			<%= @version.name %>
		<div class='back_btn btn' action='back'></div>
	</div>
	<div class='arrows'>
		<div class='slide_arrow left2 btn' action='prev_slide'></div>
		<div class='slide_arrow right2 btn' action='next_slide'></div>
	</div>
	<div class='image_slider'>
			<ul>
				<% @transmissions.each do |t|
				infoclass = "" 
				 %>
				<li sid="<%= t.id %>" name="<%= t.name %>">
					<div class='slider_prices'>
						
						<div class='price_strip'>
							<div class='top_price'><div><span class='top_price_title'>Tu precio:</span><span class='top_price_value'><%= number_to_currency(@version.list_price*t.price_up,precision: 0) %> M.N.</span> </div></div>
							<div class='price_btn btn' action="show_prices"></div>
						</div>
						<div class='price_list'>
							<ul>
								<li>
									<div class='top_price subprice'><div><span class='top_price_title'>Precio de lista:</span><span class='top_price_value'><%= number_to_currency(@version.list_price*t.price_up,precision: 0) %> M.N.</span> </div>
								</li>
								<li>
									<div class='top_price subprice'><div><span class='top_price_title'>Precio de contado:</span><span class='top_price_value'><%= number_to_currency(@version.list_price*t.price_up,precision: 0) %> M.N.</span> </div>
								</li>
								<li>
									<div class='top_price subprice'><div><span class='top_price_title'>Precio de promoción:</span><span class='top_price_value'><%= number_to_currency(@version.list_price*t.price_up,precision: 0) %> M.N.</span> </div>
								</li>
							</ul>

						</div>
						<div class="dimmer"></div>
					</div>
					<div class='price_spacer'></div>
					<div class='slide_title center_elem'>Elige la transmisión</div>
					<div class='trans_title center_elem'><%= t.name %></div>
					<div class='center_elem trans_image <%= t.name %>'>
						<% if (Rails.application.assets.find_asset 'pics/transmissions/'+t.id.to_s+'.jpg')
							infoclass="white"
						 %>
							<img src="/assets/pics/transmissions/<%=t.id%>.jpg" width="320" height="200" />
						<% end %>
					</div>
					<div class='center_elem trans_info <%= infoclass %>'><%= t.description %></div>
				</li>
				<% end %>
			</ul>
	</div>
	<div class=' navcount'>
		<ul>
		<% @transmissions.each do |t1| %>
			<li class='off'>&nbsp;</li>
		<% end %>
		</ul>
	</div>
	<div class='large_btn btn config_btn' action='page_slide' actionid="color/?car_id=<%= @car.id %>&version_id=<%= @version.id %>" review="transmission">
		<div class='left'></div>
		<div class='center'>Elegir</div>
		<div class='right'></div>
	</div>
	<div class='large_btn ready_btn btn' action='review_slide' actionid="review/?car_id=<%= @car.id %>&version_id=<%= @version.id %>" review="transmission">
		<div class='left'></div>
		<div class='center'>Listo</div>
		<div class='right'></div>
	</div>
</div>
